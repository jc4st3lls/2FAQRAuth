<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_2FAQRAuthApp.MainPage">

    <StackLayout VerticalOptions="StartAndExpand">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="QR Auth App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
      
			<Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Username:" FontAttributes="Bold" TextColor="Red"/>
                   </FormattedString>
                </Label.FormattedText>
            </Label>
			<Entry x:Name="UsernameEntry" Placeholder="username" Text="jc4st3lls" />
			
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Password:" FontAttributes="Bold" TextColor="Red"/>
                   </FormattedString>
                </Label.FormattedText>
            </Label>

			<Entry x:Name="PasswordEntry" IsPassword="true" />
			<Button Text="Login" Clicked="LoginButton_Clicked" />
			<Label x:Name="messageLabel" />
		
    </StackLayout>

</ContentPage>
